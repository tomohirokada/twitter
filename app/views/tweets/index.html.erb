<div class="container">
<div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
  <div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
<p><%= notice %></p>
<h1>つぶやき一覧</h1>
<%= link_to "つぶやく", new_tweet_path, class: 'btn btn-default' %>
<% @tweets.each do |tweet| %>
<div class="row">
    <p><%=tweet.content%></p>
  <%= link_to "編集", edit_tweet_path(tweet.id), class: 'btn btn-primary btn-sm' %>
  <%= link_to "削除", tweet_path(tweet.id), method: :delete, data:{confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm' %>
</div>
  <% end %>

</div>
</div>
