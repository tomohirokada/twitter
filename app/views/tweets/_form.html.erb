<%= form_for(@tweet, url: choose_new_or_edit) do |f| %>
  <% if @tweet.errors.any? %>
    <div id="error_explanation">
      <!--# バリデーションエラーの件数を表示します。-->
      <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>

      <ul>
      <!--# @blog.errorsは@blogをバリデーションした際のエラー情報です。-->
      <!--# full_messagesは複数のエラーメッセージを表します。-->
      <% @tweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :つぶやき %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "つぶやき一覧に戻る", tweets_path %>
